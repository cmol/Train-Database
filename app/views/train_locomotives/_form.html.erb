<%= semantic_form_for @train_locomotive, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :operator %>
    <%= f.input :locomotive_class_name %>
    <%= f.input :locomotive_class_number %>
    <%= f.input :make %>
    <%= f.input :locomotive_type %>
    <%= f.input :box_number %>
    <%= f.input :owner %>
    <%= f.input :price %>
    <%= f.input :decoder %>
    <%= f.input :decoder_address %>
    <% unless @train_locomotive.picture.exists?%>
      <%= f.input :picture, :as => :file, :required => false %>
    <% else %>
      <%= image_tag @train_locomotive.picture.url(:thumb) %>
      <%= f.input :delete_image, :as => :boolean %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
