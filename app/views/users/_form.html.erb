<% semantic_form_for @user do |form| %>
  <% form.inputs do %>
    <%= form.input :name, :label => "Navn", :hint => "Fx: Claus Lensbøl" %>
    <%= form.input :login, :label => "Login", :hint => "Fx: cmol" %>
    <%= form.input :password, :hint => "Udfyld kun hvis du vil ændre password" %>
    <%= form.input :password_confirmation, :label => "Gentag Password", :hint => "Udfyld kun hvis du vil ændre password" %>
    <% if current_user.admin == true -%>
    	<%= form.input :admin, :label => "Administrator" %>
    <% end -%>
  <% end %>
  <%= form.buttons %>
<% end %>
